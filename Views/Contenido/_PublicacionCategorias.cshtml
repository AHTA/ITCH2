@{
    ITCH2_1.Models.Entities db = new ITCH2_1.Models.Entities();
}
<div class="widget">
    <h4>
        Categorias</h4>
    <ul>
        @{
            var categorias = db.Categories.OrderByDescending(item => item.category_id);
        }
        @foreach (var item in categorias)
        {
            <li><a href="@Url.Action("Categoria", "Contenido", new { id = item.category_id })">@item.category_name</a></li>
        }
    </ul>
</div>
