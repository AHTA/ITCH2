@model ITCH2_1.Models.Pages
@{
    ViewBag.Title = "Publicacion";
}
<div class="container">
    <h2>
        Contenido</h2>
    <p class="big grey">
        Publicaciones del Instituto Tecnol&oacute;gico de Chihuahua II.</p>
    <hr />
    <!-- Blog starts -->
    <div class="blog">
        <div class="row">
            <div class="col-md-12">
                <!-- Blog Posts -->
                <div class="row">
                    <div class="col-md-8 col-sm-8">
                        <div class="posts">
                            <!-- Each posts should be enclosed inside "entry" class" -->
                            <!-- Post one -->
                            <div class="entry">
                                <h2>
                                    @Model.page_title</h2>
                                <!-- Meta details -->
                                <div class="meta">
                                    <i class="icon-calendar"></i>@Model.page_date
                                    <i class="icon-user"></i>@Model.UserProfiles.PublicUserName
                                    <i class="icon-folder-open"></i>
                                    @foreach (var item in Model.Categories)
                                    { <a href="#">@item.category_name</a> }
                                    <span class="pull-right">@*<i class="icon-comment"></i><a href="#">2 Comments</a></span>*@
                                </div>
                                <!-- Thumbnail -->
                                @Html.Raw(Model.page_content)
                            </div>
                            <div class="post-foot well">
                                <!-- Social media icons -->
                                <div class="social">
                                    <h6>
                                        Sharing is Sexy:
                                    </h6>
                                    <a href="#"><i class="icon-facebook facebook"></i></a><a href="#"><i class="icon-twitter twitter">
                                    </i></a><a href="#"><i class="icon-linkedin linkedin"></i></a><a href="#"><i class="icon-pinterest pinterest">
                                    </i></a><a href="#"><i class="icon-google-plus google-plus"></i></a>
                                </div>
                            </div>
                            <div class="clearfix">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <div class="sidebar">
                            <!-- Widget -->
                            <div class="widget">
                                <h4>
                                    Busqueda</h4>
                                <form class="form-inline">
                                <div class="form-group">
                                    <input type="text" value="" name="s" id="s" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-default">
                                    Buscar</button>
                                </form>
                            </div>
                            <!-- Publicaciones recientes/ -->
                            @Html.Partial("_PublicacionRecientes")
                            <!-- /Publicaciones recientes -->
                            
                            <!-- Categorias/ -->
                            @Html.Partial("_PublicacionCategorias")
                            <!-- /Categorias -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
